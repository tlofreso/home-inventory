# Environment variables for Home Inventory Application
# Copy this file to .env and update with your actual values

# Flask Secret Key - Used for session management and CSRF protection
# Generate a secure random key for production: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# Database URL - SQLite by default, can be changed to PostgreSQL, MySQL, etc.
# SQLite (default): sqlite:///home_inventory.db
# PostgreSQL: postgresql://user:password@localhost/home_inventory
# MySQL: mysql://user:password@localhost/home_inventory
DATABASE_URL=sqlite:///home_inventory.db

# Optional: Flask environment (development, production)
FLASK_ENV=development

# Optional: Flask debug mode (true/false)
FLASK_DEBUG=true

# Optional: Host to bind to (0.0.0.0 for external access, 127.0.0.1 for local only)
HOST=0.0.0.0

# Optional: Port to run on
PORT=5010